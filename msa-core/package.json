  "scripts": {
    "build": "nest build",
    "build:gateway": "nest build gateway-app",
    "build:auth": "nest build auth-app",
    "build:all": "nest build gateway-app && nest build user-app && nest build shop-app && nest build auth-app && nest build order-app && nest build chat-app && nest build common-app",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start-gateway:dev": "cross-env MSA_NAME=gateway nest start gateway-app --watch",
    "start-shop:dev": "nest start shop-app --watch",
    "start-user:dev": "nest start user-app --watch",
    "start-auth:dev": "nest start auth-app --watch",
    "start-order:dev": "nest start order-app --watch",
    "start-chat:dev": "nest start chat-app --watch",
    "start-common:dev": "nest start common-app --watch",
    "pm2:gateway": "cross-env MSA_NAME=gateway pm2 list && pm2-runtime start ./apps/gateway-app/ecosystem.config.js --only gateway-app",
    "pm2:all": "pm2 start ./ecosystem.config.js",
    "pm2-docker:all": "pm2-docker start ./ecosystem.config.js --name node",
    "pm2-runtime:all": "pm2-runtime start ./ecosystem.config.js",
    "pm2-list": "pm2-docker list",
    "pm2-reload:gateway": "pm2-docker reload gateway-app",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand"
  },
